{
  "name": "chronicle-web",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "api": "cd api && go run ./cmd/api",
    "api:legacy": "node backend/server.mjs",
    "sync": "node backend/sync.mjs",
    "typecheck": "tsc --noEmit",
    "lint:web": "tsc --noEmit",
    "lint:api": "cd api && test -z \"$(gofmt -l .)\" && go vet ./...",
    "lint": "npm run lint:web && npm run lint:api",
    "check:migrations": "cd api && go test ./internal/store -run \"TestMigrationsHaveMatchingUpAndDownFiles|TestDecisionLogImmutabilityMigrationUsesBlockingTriggers|TestMigrationsRoundTripPostgres\" -count=1",
    "build": "npm run typecheck && vite build",
    "preview": "vite preview",
    "test:unit": "vitest run src/ --environment=jsdom",
    "test:e2e": "node --test tests/*.test.mjs",
    "test:ui": "playwright test",
    "test:ui:headed": "playwright test --project=chromium --headed",
    "test:api:docker": "./scripts/go-test-docker.sh",
    "stack:up": "./scripts/dev-up.sh",
    "stack:reset": "./scripts/dev-reset.sh"
  },
  "dependencies": {
    "@tiptap/extension-color": "^3.20.0",
    "@tiptap/extension-font-family": "^3.20.0",
    "@tiptap/extension-highlight": "^3.20.0",
    "@tiptap/extension-placeholder": "^3.20.0",
    "@tiptap/extension-text-align": "^3.20.0",
    "@tiptap/extension-text-style": "^3.20.0",
    "@tiptap/extension-underline": "^3.20.0",
    "@tiptap/pm": "^3.20.0",
    "@tiptap/react": "^3.20.0",
    "@tiptap/starter-kit": "^3.20.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.30.1",
    "y-prosemirror": "^1.3.7",
    "y-protocols": "^1.0.7",
    "yjs": "^13.6.29"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.2",
    "@types/node": "^22.10.2",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.3.3",
    "jsdom": "^28.1.0",
    "typescript": "^5.6.3",
    "vite": "^5.4.10",
    "vitest": "^4.0.18",
    "ws": "^8.19.0"
  }
}
